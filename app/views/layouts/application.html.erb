<!DOCTYPE html>
<html>
<head>
  <title>Ta2ed</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



<div id="wrapper">
	<ul id="navigation">
		<% if current_user %>
			<li><%= link_to 'New Deck', new_deck_path %></li>
			<li><%= link_to "Decks", decks_path%></li> &#8226;
			<li><%= link_to current_user.name, edit_user_path(current_user)%></li>
			<li><%= link_to "Log Out", logout_path%></li>
		<% else %>
			<li><%= link_to 'Sign Up', signup_path %></li>
			<li><%= link_to "Log In", login_path%></li>
		<% end %>
		<!-- <li> <%= link_to "Home", decks_path%></li> -->
	</ul>
	
	<div id="header">
		ta2ed
	</div>
	<div id="content">
		<div id="header-title">
			<%= yield :header_title%>
		</div>
		<%= yield %>
	</div>
	
	<div id="footer">
		ta2ed &copy; 2012
	</div>
</div>
</body>
</html>
